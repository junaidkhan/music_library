<h1>Listing albums</h1>

<table border="1" cellpadding="3">
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Release date</th>
    <th>Genre</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>price</th>
    <th>Image path</th>
    <th>Features</th>
    <th>Artist ID</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
    
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.title %></td>
    <td><%= album.artist.name if album.artist%></td>
    <td><%= album.release_date %></td>
    <td><%= album.genre %></td>
    <td><%= album.created_at %></td>
    <td><%= album.updated_at %></td>
    <td><%= album.price %></td>
    <td><%= album.image_path %></td>
    <td><% for feature in album.features %>
        <%= feature.name %><br />
    <% end %></td>
    <td><%= album.artist_id %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

